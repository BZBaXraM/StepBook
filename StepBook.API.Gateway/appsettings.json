{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    },
    "ReverseProxy": {
      "Routes": [
        {
          "account-route": {
            "ClusterId": "account-cluster",
            "Match": {
              "Path": "/api/account/{**catch-all}"
            },
            "AuthorizationPolicy": "DefaultPolicy"
          }
        },
        {
          "users-route": {
            "ClusterId": "users-cluster",
            "Match": {
              "Path": "/api/users/{**catch-all}"
            },
            "AuthorizationPolicy": "DefaultPolicy"
          }
        },
        {
          "messages-route": {
            "ClusterId": "messages-cluster",
            "Match": {
              "Path": "/api/messages/{**catch-all}"
            },
            "AuthorizationPolicy": "DefaultPolicy"
          }
        },
        {
          "likes-route": {
            "ClusterId": "likes-cluster",
            "Match": {
              "Path": "/api/likes/{**catch-all}"
            },
            "AuthorizationPolicy": "DefaultPolicy"
          }
        },
        {
          "bucket-route": {
            "ClusterId": "bucket-cluster",
            "Match": {
              "Path": "/api/bucket/{**catch-all}"
            },
            "AuthorizationPolicy": "DefaultPolicy"
          }
        }
      ],
      "Clusters": {
        "account-cluster": {
          "Destinations": {
            "destination1": {
              "Address": "http://account-api:8000"
            }
          }
        },
        "users-cluster": {
          "Destinations": {
            "destination1": {
              "Address": "http://users-api:8080"
            }
          }
        },
        "messages-cluster": {
          "Destinations": {
            "destination1": {
              "Address": "http://messages-api:8080"
            }
          }
        },
        "likes-cluster": {
          "Destinations": {
            "destination1": {
              "Address": "http://likes-api:8080"
            }
          }
        },
        "bucket-cluster": {
          "Destinations": {
            "destination1": {
              "Address": "http://bucket-api:8080"
            }
          }
        }
      }
    }
  },
  "AllowedHosts": "*"
}
