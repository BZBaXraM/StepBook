{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    },
    "ReverseProxy": {
      "ReverseProxy": {
        "Routes": {
          "usersRoute": {
            "ClusterId": "usersCluster",
            "Match": {
              "Path": "/users/{**catch-all}"
            },
            "Transforms": [
              {
                "RequestHeader": "Authorization",
                "Copy": "true"
              }
            ]
          },
          "messagesRoute": {
            "ClusterId": "messagesCluster",
            "Match": {
              "Path": "/messages/{**catch-all}"
            },
            "Transforms": [
              {
                "RequestHeader": "Authorization",
                "Copy": "true"
              }
            ]
          }
        },
        "Clusters": {
          "usersCluster": {
            "Destinations": {
              "usersAPI": {
                "Address": "http://users-api:5000/"
              }
            }
          },
          "messagesCluster": {
            "Destinations": {
              "messagesAPI": {
                "Address": "http://messages-api:5000/"
              }
            }
          }
        }
      }
    }
  },
  "AllowedHosts": "*"
}
