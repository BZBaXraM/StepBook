{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "ReverseProxy": {
    "Routes": {
      "account-route": {
        "ClusterId": "account-cluster",
        "Match": {
          "Path": "/api/Account/{**catch-all}"
        }
      },
      "user-route": {
        "ClusterId": "user-cluster",
        "Match": {
          "Path": "/api/users/{**catch-all}"
        }
      },
      "messages-route": {
        "ClusterId": "messages-cluster",
        "Match": {
          "Path": "/api/messages/{**catch-all}"
        }
      },
      "basket-route": {
        "ClusterId": "basket-cluster",
        "Match": {
          "Path": "/api/basket/{**catch-all}"
        }
      },
      "likes-route": {
        "ClusterId": "likes-cluster",
        "Match": {
          "Path": "/api/likes/{**catch-all}"
        }
      }
    },
    "Clusters": {
      "account-cluster": {
        "Destinations": {
          "destination1": {
            "Address": "http://host.docker.internal:6060"
          }
        }
      },
      "user-cluster": {
        "Destinations": {
          "destination1": {
            "Address": "https://localhost:6061"
          }
        }
      },
      "likes-cluster": {
        "Destinations": {
          "destination1": {
            "Address": "https://localhost:6062"
          }
        }
      },
      "messages-cluster": {
        "Destinations": {
          "destination1": {
            "Address": "https://localhost:6063"
          }
        }
      },
      "basket-cluster": {
        "Destinations": {
          "destination1": {
            "Address": "https://localhost:6064"
          }
        }
      }
    }
  },
  "JWT": {
    "Secret": "a-very-long-secret-key-that-is-at-least-64-bytes-long-which-is-required-for-hmac-sha512"
  }
}